<Project Sdk="Microsoft.NET.Sdk">
	
	<PropertyGroup>
		<PackageId>$(AssemblyName)</PackageId>
		<VersionPrefix>$(VersionPrefix)</VersionPrefix>
		<VersionSuffix>$(VersionSuffix)</VersionSuffix>
		<PackageIcon>logo.png</PackageIcon>
		<PackageProjectUrl>https://nclient.github.io</PackageProjectUrl>
		<RepositoryUrl>https://github.com/nclient/nclient</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>NClient;HttpClient;Api;WebApi;AspNet;Rest</PackageTags>
		<Description>The open source HTTP client that allows you to call web service API methods using annotated controllers or interfaces. The client supports asynchronous calls, retry policies and logging. All this is simple and flexible to configure. The package provides a complete set of tools for creating http clients including third-party solutions.</Description>
		<Authors>smolchanovsky</Authors>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<IsPackable>true</IsPackable>
	</PropertyGroup>
		
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
		<Configurations>Debug;Release;ReleaseTest</Configurations>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\NClient.AspNetProxy\NClient.AspNetProxy.csproj" />
		<ProjectReference Include="..\NClient.InterfaceProxy\NClient.InterfaceProxy.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\..\logo.png" Pack="true" PackagePath="" />
		<None Include="..\..\..\LICENSE" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>

<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PackageId>$(AssemblyName)</PackageId>
		<VersionPrefix>$(VersionPrefix)</VersionPrefix>
		<VersionSuffix>$(VersionSuffix)</VersionSuffix>
		<RepositoryUrl>https://github.com/nclient/nclient</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>HttpClient;Api;WebApi;AspNet;Rest</PackageTags>
		<Description>The open source HTTP client that allows you to call web service API methods through annotated controllers. The Client supports asynchronous calls, retry policies and logging. All this is  simple and flexible to configure.</Description>
		<Authors>smolchanovsky</Authors>
		<PackageLicenseFile>../../../LICENSE</PackageLicenseFile>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\NClient.AspNetProxy.Standalone\NClient.AspNetProxy.Standalone.csproj" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\NClient.Providers\NClient.Providers.HttpClient.RestSharp\NClient.Providers.HttpClient.RestSharp.csproj" />
		<ProjectReference Include="..\..\NClient.Providers\NClient.Providers.Resilience.Polly\NClient.Providers.Resilience.Polly.csproj" />
	</ItemGroup>

</Project>

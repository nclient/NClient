<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<PackageId>$(AssemblyName)</PackageId>
		<VersionPrefix>$(VersionPrefix)</VersionPrefix>
		<VersionSuffix>$(VersionSuffix)</VersionSuffix>
		<RepositoryUrl>https://github.com/nclient/nclient</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>NClient;HttpClient;Api;WebApi;AspNet;Rest</PackageTags>
		<Description>The open source HTTP client that allows you to call web service API methods through annotated controllers. The client supports asynchronous calls, retry policies and logging. All this is simple and flexible to configure.</Description>
		<Authors>smolchanovsky</Authors>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<IsPackable>true</IsPackable>
	</PropertyGroup>

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
		<RootNamespace>NClient.AspNetProxy</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\NClient.Core\NClient.Core.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\..\..\LICENSE" Pack="true" PackagePath="" />
	</ItemGroup>

	<ItemGroup>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>NClient.AspNetProxy.Standalone.Tests</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>

</Project>

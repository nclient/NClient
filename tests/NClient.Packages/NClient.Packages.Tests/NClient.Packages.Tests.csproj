        <PackageReference Include="NClient.Standalone" Version="*-*"/>
        <PackageReference Include="NClient.AspNetCore" Version="*-*"/>
        <PackageReference Include="NClient.Providers.HttpClient.RestSharp" Version="*-*"/>
        <PackageReference Include="NClient.Providers.HttpClient.System" Version="*-*"/>
        <PackageReference Include="NClient.Providers.Resilience.Polly" Version="*-*"/>
        <PackageReference Include="NClient.Providers.Results.LanguageExt" Version="*-*"/>
        <PackageReference Include="NClient.Providers.Serialization.Json.System" Version="*-*"/>
        <PackageReference Include="NClient.Providers.Serialization.Json.Newtonsoft" Version="*-*"/>
        <PackageReference Include="NClient.Providers.Serialization.Xml.System" Version="*-*"/>
        <PackageReference Include="NClient.Extensions.DependencyInjection" Version="*-*"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="FluentAssertions" Version="5.10.3"/>
        <PackageReference Include="Moq" Version="4.16.0"/>
        <PackageReference Include="NUnit" Version="3.12.0"/>
        <PackageReference Include="NUnit3TestAdapter" Version="3.16.1"/>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.5.0"/>
        <PackageReference Include="System.Configuration.ConfigurationManager" Version="5.0.0"/>
        <PackageReference Include="WireMock.Net" Version="1.4.6"/>
    </ItemGroup>

</Project>
